{
  "name": "spartacus-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "yarn generate:icons-sheet && ng serve --open=true",
    "serve-from-path": "yarn generate:icons-sheet && ng serve --servePath=/spartacus-capybara/ --baseHref=/spartacus-capybara/ --open=true",
    "build": "yarn generate:icons-sheet && ng build --aot --prod",
    "test": "yarn generate:icons-sheet && ng test",
    "build:gh-pages": "yarn generate:icons-sheet && node_modules/.bin/ng build --aot --prod --baseHref=https://divanteltd.github.io/spartacus-capybara/",
    "build:firebase": "yarn generate:icons-sheet && node_modules/.bin/ng build --aot --prod --outputPath=public --baseHref=https://spartacus-demo.web.app/",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "format:fix": "pretty-quick --staged",
    "format:check": "prettier --config ./.prettierrc --list-different \"src/{app,environments,assets,styles}/**/*{.ts,.js,.json,.css,.scss}\"",
    "format:all": "prettier --config ./.prettierrc --write \"src/{app,environments,assets,styles}/**/*{.ts,.js,.json,.css,.scss}\"",
    "generate:icons-sheet": "svg-sprite-generate -d resources/icons -o src/assets/icons-sheet.svg"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && ng lint"
    }
  },
  "dependencies": {
    "@angular/animations": "~8.2.14",
    "@angular/common": "~8.2.14",
    "@angular/compiler": "~8.2.14",
    "@angular/core": "~8.2.14",
    "@angular/forms": "~8.2.14",
    "@angular/platform-browser": "~8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.14",
    "@angular/router": "~8.2.14",
    "@angular/service-worker": "~8.2.14",
    "@ng-bootstrap/ng-bootstrap": "^4.1.0",
    "@ng-select/ng-select": "^2.13.2",
    "@ngrx/effects": "^8.3.0",
    "@ngrx/router-store": "^8.3.0",
    "@ngrx/store": "^8.3.0",
    "@spartacus/assets": "^1.5",
    "@spartacus/core": "^1.5",
    "@spartacus/storefront": "^1.5",
    "@spartacus/styles": "^1.5",
    "angular-google-tag-manager": "^1.2.0",
    "bootstrap": "^4.2.1",
    "husky": "^4.2.3",
    "i18next": "^15.0.6",
    "i18next-xhr-backend": "^2.0.1",
    "ngx-infinite-scroll": "^8.0.0",
    "ngx-swiper-wrapper": "^9.0.1",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.24",
    "@angular/cli": "~8.3.24",
    "@angular/compiler-cli": "~8.2.14",
    "@angular/language-service": "~8.2.14",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "protractor": "~5.4.0",
    "svg-sprite-generator": "^0.0.7",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3"
  }
}
